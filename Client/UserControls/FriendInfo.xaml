<UserControl x:Class="Client.UserControls.FriendInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.UserControls"
             mc:Ignorable="d">
    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Margin="10,10,10,10" Padding="10,10,10,10">
        <Grid MouseLeftButtonUp="Grid_MouseLeftButtonUp" Cursor="Hand" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100px" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Height="100" Name="imgUser"/>
            <StackPanel Grid.Column="1">
                <Label Content="[USERNAME]" Height="100" VerticalContentAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
